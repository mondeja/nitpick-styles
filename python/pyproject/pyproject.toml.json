{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "tool": {
      "type": "object",
      "required": [
        "poetry",
        "bump",
        "poetry-exec-plugin",
        "nitpick",
        "coverage"
      ],
      "properties": {
        "poetry": {
          "type": "object",
          "required": [
            "name",
            "version",
            "description",
            "readme",
            "license",
            "authors",
            "repository",
            "documentation",
            "classifiers",
            "urls",
            "dependencies",
            "group"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "version": {
              "type": "string",
              "pattern": "\\d+\\.\\d+\\.\\d+"
            },
            "description": {
              "type": "string"
            },
            "readme": {
              "const": "README.md"
            },
            "license": {
              "type": "string"
            },
            "authors": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            },
            "repository": {
              "type": "string",
              "format": "uri"
            },
            "documentation": {
              "type": "string",
              "format": "uri"
            },
            "classifiers": {
              "type": "array",
              "minItems": 3,
              "prefixItems": [
                {
                  "oneOf": [
                    { "const": "Development Status :: 4 - Beta" },
                    { "const": "Development Status :: 3 - Alpha" },
                    { "const": "Development Status :: 2 - Pre-Alpha" },
                    { "const": "Development Status :: 5 - Production/Stable" },
                    { "const": "Development Status :: 6 - Mature" }
                  ]
                },
                {
                  "type": "string",
                  "pattern": "^Operating System :: "
                },
                {
                  "type": "string",
                  "pattern": "^Intended Audience :: "
                },
                {
                  "type": "string",
                  "pattern": "^Topic :: "
                }
              ],
              "items": {
                "type": "string",
                "pattern": "^(?!(License)|(Programming Language :: Python ::))"
              }
            },
            "packages": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object"
              }
            },
            "urls": {
              "type": "object",
              "required": ["Bug tracker"],
              "properties": {
                "Bug tracker": {
                  "type": "string",
                  "format": "uri"
                }
              }
            },
            "dependencies": {
              "type": "object",
              "required": ["python"],
              "properties": {
                "python": {
                  "type": "string",
                  "pattern": "^\\^\\d+\\.\\d+"
                }
              }
            },
            "group": {
              "type": "object",
              "required": ["dev"],
              "propertyNames": {
                "pattern": "^(?!(docs)|(tests))"
              },
              "properties": {
                "dev": {
                  "type": "object",
                  "required": ["dependencies"],
                  "properties": {
                    "dependencies": {
                      "type": "object",
                      "required": ["mondeja-bump"],
                      "properties": {
                        "mondeja-bump": {
                          "type": "string",
                          "pattern": "^\\^\\d+\\.\\d+\\.\\d+"
                        }
                      }
                    }
                  }
                }
              }
            },
            "scripts": {
              "type": "object",
              "minProperties": 1,
              "patternProperties": {
                "^\\w$": {
                  "type": "string"
                }
              }
            }
          }
        },
        "bump": {
          "type": "object",
          "minProperties": 1,
          "maxProperties": 2,
          "additionalProperties": false,
          "properties": {
            "source": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "properties": {
                    "file": {
                      "type": "string",
                      "format": "iri-reference"
                    },
                    "regex": {
                      "type": "string"
                    }
                  }
                }
              ]
            },
            "targets": {
              "type": "array",
              "minItems": 1,
              "items": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "required": ["file"],
                    "properties": {
                      "file": {
                        "type": "string",
                        "format": "iri-reference"
                      },
                      "regex": {
                        "type": "string"
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "poetry-exec-plugin": {
          "type": "object",
          "required": ["commands"],
          "properties": {
            "commands": {
              "type": "object",
              "required": ["lint"],
              "lint": {
                "const": "pre-commit run -a"
              }
            }
          }
        },
        "nitpick": {
          "type": "object",
          "required": ["style", "cache"],
          "properties": {
            "style": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "format": "iri-reference",
                "pattern": "^(gh)|(https)|(py)://"
              }
            },
            "cache": {
              "type": "string",
              "pattern": "^(\\d+ (minutes?)|(hours?)|(days?)|(weeks?))|(never)"
            }
          }
        },
        "coverage": {
          "type": "object",
          "required": ["report"],
          "properties": {
            "report": {
              "type": "object",
              "required": ["exclude_lines"],
              "properties": {
                "exclude_lines": {
                  "type": "array",
                  "prefixItems": [
                    {
                      "const": "pragma: no cover"
                    }
                  ],
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "pytest": {
          "type": "object",
          "properties": {
            "ini_options": {
              "type": "object",
              "properties": {
                "addopts": {
                  "type": "string"
                },
                "cache_dir": {
                  "type": "string",
                  "format": "iri-reference"
                },
                "confcutdir": {
                  "type": "string",
                  "format": "iri-reference"
                },
                "console_output_style": {
                  "oneOf": [
                    {
                      "const": "classic"
                    },
                    {
                      "const": "progress"
                    },
                    {
                      "count": "count"
                    }
                  ]
                },
                "doctest_encoding": {
                  "type": "string"
                },
                "doctest_optionflags": {
                  "type": "string"
                },
                "empty_parameter_set_mark": {
                  "oneOf": [
                    {
                      "const": "skip"
                    },
                    {
                      "const": "xfail"
                    },
                    {
                      "const": "fail_at_collect"
                    }
                  ]
                },
                "faulthandler_timeout": {
                  "type": "number"
                },
                "filterwarnings": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                },
                "junit_duration_report": {
                  "oneOf": [
                    {
                      "const": "total"
                    },
                    {
                      "const": "call"
                    }
                  ]
                },
                "junit_family": {
                  "oneOf": [
                    {
                      "const": "legacy"
                    },
                    {
                      "const": "xunit1"
                    },
                    {
                      "const": "xunit2"
                    }
                  ]
                },
                "junit_logging": {
                  "oneOf": [
                    {
                      "const": "log"
                    },
                    {
                      "const": "system-out"
                    },
                    {
                      "const": "system-err"
                    },
                    {
                      "const": "out-err"
                    },
                    {
                      "const": "all"
                    },
                    {
                      "const": "no"
                    }
                  ]
                },
                "junit_log_passing_tests": {
                  "type": "boolean"
                },
                "junit_suite_name": {
                  "type": "string"
                },
                "log_auto_indent": {
                  "oneOf": [
                    {
                      "type": "boolean"
                    },
                    {
                      "const": "On"
                    },
                    {
                      "const": "Off"
                    },
                    {
                      "type": "number"
                    }
                  ]
                },
                "log_cli": {
                  "type": "boolean"
                },
                "log_cli_date_format": {
                  "type": "string"
                },
                "log_cli_format": {
                  "type": "string"
                },
                "log_cli_level": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    }
                  ]
                },
                "log_date_format": {
                  "type": "string"
                },
                "log_file": {
                  "type": "string",
                  "format": "iri-reference"
                },
                "log_file_date_format": {
                  "type": "string"
                },
                "log_file_format": {
                  "type": "string"
                },
                "log_file_level": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    }
                  ]
                },
                "log_format": {
                  "type": "string"
                },
                "log_level": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    }
                  ]
                },
                "markers": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                },
                "minversion": {
                  "type": "string"
                },
                "norecursedirs": {
                  "type": "string"
                },
                "python_classes": {
                  "type": "string"
                },
                "python_files": {
                  "type": "string"
                },
                "python_functions": {
                  "type": "string"
                },
                "required_plugins": {
                  "type": "string"
                },
                "testpaths": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "format": "iri-reference"
                  }
                },
                "usefixtures": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string"
                  }
                },
                "xfail_strict": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}
