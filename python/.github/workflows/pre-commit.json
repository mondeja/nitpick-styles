{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "maxProperties": 3,
  "minProperties": 3,
  "properties": {
    "name": {
      "const": "pre-commit"
    },
    "on": {
      "type": "object",
      "maxProperties": 3,
      "minProperties": 3,
      "properties": {
        "pull_request": {
          "type": "null"
        },
        "workflow_dispatch": {
          "type": "null"
        },
        "push": {
          "type": "object",
          "maxProperties": 1,
          "minProperties": 1,
          "properties": {
            "branches": {
              "type": "array",
              "prefixItems": [
                {
                  "const": "master"
                }
              ],
              "items": false
            }
          }
        }
      }
    },
    "jobs": {
      "type": "object",
      "minProperties": 1,
      "maxProperties": 1,
      "properties": {
        "pre-commit": {
          "type": "object",
          "minProperties": 2,
          "maxProperties": 2,
          "properties": {
            "runs-on": {
              "const": "ubuntu-latest"
            },
            "steps": {
              "type": "array",
              "items": false,
              "prefixItems": [
                {
                  "$ref": "https://raw.githubusercontent.com/mondeja/nitpick-styles/master/schemas/gh-workflows/actions/checkout.json"
                },
                {
                  "$ref": "https://raw.githubusercontent.com/mondeja/nitpick-styles/master/schemas/gh-workflows/actions/setup-python.json"
                },
                {
                  "type": "object",
                  "minProperties": 2,
                  "maxProperties": 2,
                  "properties": {
                    "uses": {
                      "const": "pre-commit/action@v2.0.3"
                    },
                    "name": {
                      "const": "Run pre-commit"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}
