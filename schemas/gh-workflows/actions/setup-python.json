{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/mondeja/nitpick-styles/master/schemas/gh-workflows/actions/setup-python.json",
  "type": "object",
  "required": ["uses", "name", "with"],
  "additionalProperties": false,
  "properties": {
    "uses": {
      "const": "actions/setup-python@v3"
    },
    "name": {
      "const": "Set up Python"
    },
    "with": {
      "type": "object",
      "required": ["python-version"],
      "additionalProperties": false,
      "properties": {
        "python-version": {
          "const": "3.x"
        }
      }
    }
  }
}
